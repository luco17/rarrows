---
interface Props {
  reversed?: boolean;
  imageSrc: string;
  altText: string;
  title: string;
  bodyText: string;
  additionalHtml?: string;
}

const {
  reversed = false,
  imageSrc,
  altText,
  title,
  bodyText,
  additionalHtml,
} = Astro.props;

const order = reversed ? "md:order-last" : "";
const textAlign = reversed ? "md:text-right" : "md:text-left";
---

<div class="grid grid-cols-1 items-center gap-x-8 gap-y-4 md:grid-cols-2">
  {/* Text div */}
  <div class={`${order} flex flex-col space-y-2 items-center md:items-start`}>
    <h2 class={`text-center text-4xl font-bold ${textAlign} md:text-6xl`}>
      {title}
    </h2>
    <p class={textAlign}>{bodyText}</p>
    <Fragment set:html={additionalHtml} />
  </div>
  {/* Image div */}
  <div>
    <img src={imageSrc} alt={altText} class="rounded-md object-cover" />
  </div>
</div>
